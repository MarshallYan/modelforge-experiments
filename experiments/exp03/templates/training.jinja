[training]
number_of_epochs = 500
remove_self_energies = true
batch_size = 128
lr = 5e-4
monitor = "val/per_system_energy/rmse"
shift_center_of_mass_to_origin = false
log_norm = false
plot_frequency = 1
# ------------------------------------------------------------ #
[training.experiment_logger]
logger_name = "wandb"
[training.experiment_logger.wandb_configuration]
save_dir = "logs"
project = "{{ project }}"
group = "{{ group }}"
log_model = true
job_type = "benchmarking"
tags = {{ tags }}
notes = "compare multitask training with E/F/mu"
# ------------------------------------------------------------ #
[training.lr_scheduler]
scheduler_name = "ReduceLROnPlateau"
frequency = 1
mode = "min"
monitor = "val/per_system_energy/rmse"
factor = 0.5
patience = 10
cooldown = 15
min_lr = 1e-6
threshold = 0.1
threshold_mode = "abs"
interval = "epoch"
# ------------------------------------------------------------ #
[training.loss_parameter]
loss_components = {{ loss_components }}
[training.loss_parameter.weight]
{{loss_weight}}
# ------------------------------------------------------------ #
[training.early_stopping]
verbose = true
min_delta = 0.1
patience = 100
# ------------------------------------------------------------ #
[training.splitting_strategy]
name = "random_record_splitting_strategy"
data_split = [0.8, 0.1, 0.1]
seed = {{ seed }}
# ------------------------------------------------------------ #
